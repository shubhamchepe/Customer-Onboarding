<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMEGPCUSTOMERBank.DashboardPage">

    <VerticalStackLayout Spacing="0">

        <!-- Custom Top Green Header with Back Button -->
        <Grid HeightRequest="60"
              BackgroundColor="#0f9d58"
              Padding="10,0"
              ColumnDefinitions="Auto,*,Auto"
              VerticalOptions="Start">

            <!-- Back Button -->
            <ImageButton Source="back_icon.png"
                         WidthRequest="30"
                         HeightRequest="30"
                         BackgroundColor="Transparent"
                         VerticalOptions="Center"
                         Clicked="OnBackButtonClicked" />

            <!-- Title -->
            <Label Text="DASHBOARD"
                   Grid.Column="1"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontSize="20"
                   FontAttributes="Bold" />

        </Grid>

        <!-- Welcome Message -->
        <Label Text="Welcome, Your Application ID is KVMH-2025000484"
               BackgroundColor="Transparent"
               TextColor="#f26722"
               FontSize="14"
               Margin="10,10,10,5" />

        <!-- Welcome Header Box -->
        <Frame BackgroundColor="#212121"
               CornerRadius="0"
               HasShadow="False"
               Padding="10"
               Margin="0,0,0,10">
            <Label Text="Hi, Nilotpal Jain WELCOME TO PMEGP PORTAL"
                   FontAttributes="Bold"
                   TextColor="White"
                   FontSize="16" />
        </Frame>

        <!-- Info Card -->
        <Frame CornerRadius="10"
               Margin="15"
               Padding="20"
               BackgroundColor="White"
               HasShadow="True">
            <Grid RowDefinitions="Auto,Auto,Auto"
                  ColumnDefinitions="Auto,*">
                <Label Text="Application ID" Grid.Row="0" Grid.Column="0" FontSize="14" />
                <Label Text="KVMH-2025000484" Grid.Row="0" Grid.Column="1" 
                       TextColor="#f26722" FontSize="14" FontAttributes="Bold" 
                       HorizontalOptions="End" />

                <Label Text="Applicant Name" Grid.Row="1" Grid.Column="0" FontSize="14" Margin="0,10,0,0"/>
                <Label Text="" Grid.Row="1" Grid.Column="1" FontSize="14" Margin="0,10,0,0" HorizontalOptions="End" />

                <Label Text="Application Status" Grid.Row="2" Grid.Column="0" FontSize="14" Margin="0,10,0,0"/>
                <Label Text="" Grid.Row="2" Grid.Column="1" FontSize="14" Margin="0,10,0,0" HorizontalOptions="End" />
            </Grid>
        </Frame>
    </VerticalStackLayout>
</ContentView>

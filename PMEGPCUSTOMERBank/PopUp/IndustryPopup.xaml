<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="PMEGPCUSTOMERBank.PopUp.IndustryPopup"
    Color="White">

    <Frame BackgroundColor="White"
           CornerRadius="12"
           HasShadow="True"
           WidthRequest="420"
           HeightRequest="820"
           Padding="15">

        <VerticalStackLayout Padding="10" Spacing="10">

            <Label Text="EDP Offices"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Horizontal Scroll -->
            <ScrollView Orientation="Horizontal">

                <VerticalStackLayout Spacing="10">

                    <!-- Table Header -->
                    <Grid ColumnSpacing="5" Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <Label Text="Office Name" Grid.Column="0" FontAttributes="Bold"/>
                        <Label Text="Address" Grid.Column="1" FontAttributes="Bold"/>
                        <Label Text="District" Grid.Column="2" FontAttributes="Bold"/>
                        <Label Text="State" Grid.Column="3" FontAttributes="Bold"/>
                        <Label Text="Phone" Grid.Column="4" FontAttributes="Bold"/>
                        <Label Text="Select" Grid.Column="5" FontAttributes="Bold"/>
                    </Grid>

                    <BoxView HeightRequest="1" Color="Gray"/>

                    <!-- Data Table -->
                    <CollectionView x:Name="edpList"
                                    ItemsSource="{Binding Offices}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnSpacing="5" Padding="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Text="{Binding Off_Name}" Grid.Column="0"/>
                                    <Label Text="{Binding Address}" Grid.Column="1"/>
                                    <Label Text="{Binding District_Name}" Grid.Column="2"/>
                                    <Label Text="{Binding State_Name}" Grid.Column="3"/>
                                    <Label Text="{Binding TEL_NO}" Grid.Column="4"/>

                                    <!-- Small Select Button -->
                                    <Button Text="âœ”"
                                            Grid.Column="5"
                                            WidthRequest="50"
                                            HeightRequest="30"
                                            BackgroundColor="Green"
                                            TextColor="White"
                                            FontSize="12"
                                            CornerRadius="6"
                                            Clicked="OnSelectClicked"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>

            </ScrollView>

        </VerticalStackLayout>
    </Frame>

</toolkit:Popup>
